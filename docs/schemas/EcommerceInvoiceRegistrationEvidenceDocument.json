                                        "priceCurrency": {
                                            "$comment": "{\"term\": \"priceCurrency\", \"@id\": \"https://schema.org/priceCurrency\"}",
                                            "title": "Pricecurrency",
                                            "type": "string",
                                            "default": "",
                                            "examples": [
                                                "USD"
                                            ]
